#escape ^Aa
#escape ^Jj
#escape ^kk
escape ^gg
hardstatus alwayslastline "[%02C] %`%-w%{=b bw}%n %t%{-}%+w"
autodetach on
defbce on
shell -$SHELL
#term xterm-256
#term vt100
defencoding utf8
encoding utf8 utf8

bind ^U encoding utf8 utf8
bind ^E encoding eucjp utf8
bind ^W encoding sjis utf8

